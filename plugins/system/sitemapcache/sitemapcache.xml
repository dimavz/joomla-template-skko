<?xml version="1.0" encoding="UTF-8"?>
<extension type="plugin" version="3.6.5" group="system" method="upgrade">
	<name>plg_system_sitemapcache</name>
	<version>1.0.6</version>
	<creationDate>2017-04-01</creationDate>
	<license>http://www.gnu.org/licenses/gpl-2.0.html</license>
	<copyright>Copyright (C) 2017 Addon Dev. All rights reserved.</copyright>
	<author>Philip Sorokin</author>
	<authorEmail>philip.sorokin@gmail.com</authorEmail>
	<authorUrl>https://addondev.com</authorUrl>
	<description>PLG_SITEMAPCACHE_DESCRIPTION</description>
	<files>
		<filename plugin="sitemapcache">sitemapcache.php</filename>
	</files>
	<languages folder="language">
		<language tag="ru-RU">ru-RU/ru-RU.plg_system_sitemapcache.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_system_sitemapcache.sys.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_sitemapcache.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_sitemapcache.sys.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_system_sitemapcache.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_system_sitemapcache.sys.ini</language>
		<language tag="fr-CA">fr-CA/fr-CA.plg_system_sitemapcache.ini</language>
		<language tag="fr-CA">fr-CA/fr-CA.plg_system_sitemapcache.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="notice_order" type="spacer" label="PLG_SITEMAPCACHE_ORDER_NOTE" />
				<field name="lifetime" type="number" min="1" default="15" label="PLG_SITEMAPCACHE_LIFETIME_LABEL" description="PLG_SITEMAPCACHE_LIFETIME_DESCRIPTION"/>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" name="Sitemap cache update server">http://addondev.com/support/updates/sitemapcache.xml</server>
	</updateservers>
</extension>
