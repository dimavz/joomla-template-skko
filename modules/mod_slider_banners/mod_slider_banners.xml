	<authorUrl>http://www.prodogs.info</authorUrl>
	<version>1.0.0</version>
	<description>MOD_SLIDER_BANNERS_XML_DESCRIPTION</description>
	
	<files>
		<folder>assets</folder>
		<folder>tmpl</folder>
		<filename>index.html</filename>
		<filename module="mod_slider_banners">mod_slider_banners.php</filename>
		<filename>mod_slider_banners.xml</filename>
		<filename>helper.php</filename>
	</files>
	
	<languages folder="language">
		<language tag="ru-RU">ru-RU/ru-RU.mod_slider_banners.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_slider_banners.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="images" label="MOD_SLIDER_BANNERS_FIELDSET_IMAGES">
			
				<field name="image1" type="media" label="MOD_SLIDER_BANNERS_FIELD_IMAGE1" />
				<field name="link_image1" type="text" label="MOD_SLIDER_BANNERS_FIELD_LINK_IMAGE1" />
				
				<field name="image2" type="media" label="MOD_SLIDER_BANNERS_FIELD_IMAGE2" />
				<field name="link_image2" type="text" label="MOD_SLIDER_BANNERS_FIELD_LINK_IMAGE2" />
				
				<field name="image3" type="media" label="MOD_SLIDER_BANNERS_FIELD_IMAGE3" />
				<field name="link_image3" type="text" label="MOD_SLIDER_BANNERS_FIELD_LINK_IMAGE3" />
				
				<field name="image4" type="media" label="MOD_SLIDER_BANNERS_FIELD_IMAGE4" />
				<field name="link_image4" type="text" label="MOD_SLIDER_BANNERS_FIELD_LINK_IMAGE4" />
				
				<field name="image5" type="media" label="MOD_SLIDER_BANNERS_FIELD_IMAGE5" />
				<field name="link_image5" type="text" label="MOD_SLIDER_BANNERS_FIELD_LINK_IMAGE5" />
				
				<field name="image6" type="media" label="MOD_SLIDER_BANNERS_FIELD_IMAGE6" />
				<field name="link_image6" type="text" label="MOD_SLIDER_BANNERS_FIELD_LINK_IMAGE6" />
				
				<field name="image7" type="media" label="MOD_SLIDER_BANNERS_FIELD_IMAGE7" />
				<field name="link_image7" type="text" label="MOD_SLIDER_BANNERS_FIELD_LINK_IMAGE7" />
				
				<field name="image8" type="media" label="MOD_SLIDER_BANNERS_FIELD_IMAGE8" />
				<field name="link_image8" type="text" label="MOD_SLIDER_BANNERS_FIELD_LINK_IMAGE8" />
				
				<field name="image9" type="media" label="MOD_SLIDER_BANNERS_FIELD_IMAGE9" />
				<field name="link_image9" type="text" label="MOD_SLIDER_BANNERS_FIELD_LINK_IMAGE9" />
				
				<field name="image10" type="media" label="MOD_SLIDER_BANNERS_FIELD_IMAGE10" />
				<field name="link_image10" type="text" label="MOD_SLIDER_BANNERS_FIELD_LINK_IMAGE10" />
				
			</fieldset>
			
			<fieldset name="images_directory" label="MOD_SLIDER_BANNERS_FIELDSET_IMAGES_DIRECTORY">
				<field 
					name="images_folder" 
					type="folderlist"
					directory="images/"
					hide_default="true"
					label="MOD_SLIDER_BANNERS_FIELD_IMAGES_FOLDER"/>
			</fieldset>
			
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
			</fieldset>

		</fields>
	</config>
</extension>
