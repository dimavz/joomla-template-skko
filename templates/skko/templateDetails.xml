        <language tag="ru-RU">ru-RU/ru-RU.tpl_skko.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.tpl_skko.sys.ini</language>
        
		<language tag="en-GB">en-GB/en-GB.tpl_skko.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_skko.sys.ini</language>
	</languages>
	
	<config>		
		<fields name="params">
			<fieldset name="advanced">
			
				<field name="site_logo" 
					type="media" 
					label="TPL_SKKOINFO_FIELD_SITELOGO" 
					description="TPL_SKKOINFO_FIELD_SITELOGO_DESC">
				</field>
				
				<field name="site_name_ru" 
					type="text" 
					label="TPL_SKKOINFO_FIELD_SITENAME_RU" 
					description="TPL_SKKOINFO_FIELD_SITENAME_DESC_RU">
				</field>
				
				<field name="site_desc_ru" 
					type="textarea" 
					label="TPL_SKKOINFO_FIELD_SITEDESC_RU" 
					description="TPL_SKKOINFO_FIELD_SITEDESC_DESC_RU">
				</field>
				<field name="site_name_by" 
					type="text" 
					label="TPL_SKKOINFO_FIELD_SITENAME_BY" 
					description="TPL_SKKOINFO_FIELD_SITENAME_DESC">
				</field>
				
				<field name="site_desc_by" 
					type="textarea" 
					label="TPL_SKKOINFO_FIELD_SITEDESC_BY" 
